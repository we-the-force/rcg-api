{
  "kind": "collectionType",
  "collectionName": "articulos",
  "info": {
    "name": "articulo"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Titulo": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "fecha": {
      "type": "date"
    },
    "visitas": {
      "type": "integer"
    },
    "categoria": {
      "model": "categorias",
      "via": "articulos"
    },
    "comentarios": {
      "collection": "comentario",
      "via": "articulo"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "tags.tags"
    },
    "autor": {
      "model": "autor",
      "via": "articulos"
    },
    "url": {
      "type": "uid",
      "targetField": "Titulo",
      "required": true
    },
    "relevante": {
      "type": "boolean"
    },
    "fin_relevante": {
      "type": "datetime"
    }
  }
}
